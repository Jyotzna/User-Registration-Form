<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ViewDataActivity"
    tools:ignore="ExtraText,VisualLintBounds">

    <!-- ListView to display students (active or deleted) -->
    <ListView
        android:id="@+id/listViewStudents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonToggle" />

    <!-- Toggle button to switch between active and deleted data -->
    <Button
        android:id="@+id/buttonToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_deleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPermanentDelete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- Permanently delete button aligned to the right of Toggle button -->
    <Button
        android:id="@+id/buttonPermanentDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permanently_delete"
        app:layout_constraintStart_toEndOf="@+id/buttonToggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
